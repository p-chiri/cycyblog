	
<div class="max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
	<a href="#">
		<% if post.image.attached? %>
			<%= image_tag (post.image), class:"rounded-t-lg" %>
		<% end %>
	</a>
	<div class="p-5">
		<a href="#">
			<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">		<%= post.title %></h5>
		</a>
		<p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= post.description%></p>
		<% if action_name != "show" %>
			<%= link_to "Read More", post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
			<%= link_to 'Edit this post', edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
		<% end %>
	</div>
</div>
